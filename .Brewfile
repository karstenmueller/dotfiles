cask_args appdir: '/Applications'

# Taps
tap 'homebrew/core'
tap 'homebrew/bundle'
tap 'homebrew/services'

# Editor
cask 'visual-studio-code'

# kubectl lives in Docker App
cask 'docker'

# Kubernetes
tap 'johanhaleby/kubetail'
brew 'kubetail'
brew 'kubectx'
brew 'krew'

# Cloud azure
brew 'azure/draft/draft'
brew 'azure-cli'

# brew 'packer'
cask 'multipass'

# Terraform
brew 'terraform'
brew 'graphviz'
brew 'tflint'

# Microsoft related
cask 'powershell'
cask 'dotnet'
brew 'unix2dos'

# Font related
tap 'homebrew/cask-fonts'
cask 'font-source-code-pro'
cask 'font-source-sans-pro'
brew 'highlight'

# QuickLook
# See https://github.com/sindresorhus/quick-look-plugins
cask 'betterzip'
cask 'quicklook-json'

# git tools
brew 'git'
brew 'gitup'
brew 'git-secret'
brew 'pre-commit'

# GitHub tools
brew 'hub'
brew 'gitversion'
brew 'git-credential-manager'
tap 'nektos/tap'
brew 'nektos/tap/act'
brew 'hub'

# dev tools
cask 'visual-studio-code'
